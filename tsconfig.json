{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/context/*": [
        "context/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/providers/*": [
        "providers/*"
      ],
      "@/ui/*": [
        "ui/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/constants/*": [
        "constants/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/app/*": [
        "app/*"
      ]
    },
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.tsx",
    ".next/types//*.ts",
    "/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
